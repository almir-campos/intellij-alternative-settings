<templateSet group="HTML/XML">
  <template name="T" value="&lt;$TAG$ id=&quot;$I$&quot;&gt;$SELECTION$&lt;/$TAGNAME$&gt;" shortcut="TAB" description="Surround with &lt;tag&gt;&lt;/tag&gt;" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="TAG" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="I" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="TAGNAME" expression="firstWord(TAG)" defaultValue="&quot;&quot;" alwaysStopAt="false" />
    <context>
      <option name="COMPLETION" value="false" />
      <option name="JAVA_CODE" value="false" />
      <option name="JAVA_COMMENT" value="true" />
      <option name="JAVA_STRING" value="false" />
      <option name="JSP" value="true" />
    </context>
  </template>
  <template name="divi" value="&lt;div id=&quot;$END$&quot;&gt;&#10;$TAB$&#10;&lt;/div&gt;" description="&lt;div id=&quot;&quot;&gt;&lt;/div&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="TAB" expression="\t" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="divc" value="&lt;div class=&quot;$END$&quot;&gt;&#10;$TAB$&#10;&lt;/div&gt;" description="&lt;div class=&quot;$T$&quot;&gt;&lt;/div&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="TAB" expression="\t" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="divic" value="&lt;div id=&quot;$END$&quot; class=&quot;&quot;&gt;&#10;$TAB$&#10;&lt;/div&gt;" description="&lt;div id=&quot;$END$&quot;class=&quot;$T$&quot;&gt;&lt;/div&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="TAB" expression="\t" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML" value="true" />
      <option name="JAVA_SCRIPT" value="true" />
    </context>
  </template>
  <template name="C.I" value="&lt;div class=&quot;$C$&quot; id=&quot;$I$&quot;&gt;&lt;/div&gt;" shortcut="TAB" description="d" toReformat="true" toShortenFQNames="true" deactivated="true">
    <variable name="C" expression="firstWord(String)" defaultValue="" alwaysStopAt="false" />
    <variable name="I" expression="user()" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="COMPLETION" value="false" />
      <option name="HTML" value="true" />
      <option name="JAVA_CODE" value="false" />
      <option name="JAVA_COMMENT" value="true" />
      <option name="JAVA_STRING" value="false" />
      <option name="JSP" value="true" />
      <option name="JSX_HTML" value="true" />
      <option name="XML_TEXT" value="true" />
    </context>
  </template>
</templateSet>